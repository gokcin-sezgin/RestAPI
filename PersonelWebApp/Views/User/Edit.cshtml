@model WebService.Models.UserInfo

@{
    ViewData["Title"] = "Edit";
}


    <h4>@Html.DisplayFor(modelItem => modelItem.UserName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserInfoId" />

            <div class="form-group">
                <label asp-for="PersonelAd" class="control-label"></label>
                <input asp-for="PersonelAd"  class="form-control" />
                <span asp-validation-for="PersonelAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonelSoyad" class="control-label"></label>
                <input asp-for="PersonelSoyad" class="form-control" />
                <span asp-validation-for="PersonelSoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonelTcNo" class="control-label"></label>
                <input asp-for="PersonelTcNo" class="form-control" />
                <span asp-validation-for="PersonelTcNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserPassword" class="control-label"></label>
                <input asp-for="UserPassword" class="form-control" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
